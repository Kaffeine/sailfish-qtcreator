<wizard version="1" kind="project"
        class="qt4project" firstpage="10"
        id="Q.SailfishOSQtQuick2Application" category="F.QtApplications"
        featuresRequired="QtSupport.Wizards.FeatureSailfishOS">
    <description>Creates a SailfishOS Qt Quick Application using Sailfish Silica components.</description>
    <displayname>SailfishOS Qt Quick Application</displayname>;
    <displaycategory>SailfishOS</displaycategory>
    <files>
        <file source="main.cpp"/>
        <file source="template.desktop" target="%ProjectName%.desktop"/>
        <file source="template.pro" target="%ProjectName%.pro" openproject="true"/>
        <file source="cover/CoverPage.qml" openeditor="true"/>
        <file source="pages/FirstPage.qml" openeditor="true"/>
        <file source="pages/SecondPage.qml" openeditor="true"/>
        <file source="main.qml" openeditor="true"/>
        <file source="sailfishapplication/sailfishapplication.cpp"/>
        <file source="sailfishapplication/sailfishapplication.h"/>
        <file source="sailfishapplication/sailfishapplication.pri"/>
        <file source="rpm/template.yaml" target="rpm/%ProjectName%.yaml"/>
	<file source="rpm/template.spec" target="rpm/%ProjectName%.spec"/>
    </files>
    <fieldpagetitle>Application Details</fieldpagetitle>
    <fields>
        <field mandatory="true" name="Summary">
            <fieldcontrol class="QLineEdit" defaulttext="My SailfishOS Application" />
            <fielddescription>Summary:</fielddescription>
        </field>
        <field mandatory="true" name="Version">
            <fieldcontrol class="QLineEdit" defaulttext="0.1" />
            <fielddescription>Version:</fielddescription>
        </field>
        <field name="Description">
            <fieldcontrol class="QTextEdit" defaulttext="Short description of my SailfishOS Application"/>
            <fielddescription>Description:</fielddescription>
        </field>
    </fields>
</wizard>
